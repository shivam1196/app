<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shivam.acm.project_elaundry"
    android:orientation="horizontal"
    android:paddingBottom="5sp"
    android:paddingLeft="5sp"
    android:paddingTop="5sp"
    android:paddingRight="5sp"
    android:background="@drawable/wall">
    <LinearLayout
        android:layout_width="129dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.example.shivam.acm.SquareImageView
            android:id="@+id/el_imgView1"
            android:layout_width="match_parent"
            android:layout_height="151dp"
            android:paddingTop="5sp"
            app:srcCompat="@drawable/acmwcp" />

        <TextView
            android:id="@+id/el_txtView1"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:fontFamily="serif"
            android:text="AKSHAT      (Mentor)"
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:textSize="18sp"
            android:textStyle="bold" />

        <com.example.shivam.acm.SquareImageView
            android:id="@+id/el_imgView2"
            android:layout_width="match_parent"
            android:layout_height="153dp"
            app:srcCompat="@drawable/utkarsh_sandeep_singh" />

        <TextView
            android:id="@+id/el_txtView2"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:fontFamily="serif"
            android:text="UTKARSH    (DEVELOPER)"
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/el_txtView3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="serif"
            android:textAlignment="viewStart"
            android:textColor="@android:color/background_light"
            android:textSize="18sp"
            android:paddingLeft="7sp"/>
    </LinearLayout>
</LinearLayout>

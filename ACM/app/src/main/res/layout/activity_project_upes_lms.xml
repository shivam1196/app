<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shivam.acm.project_upes_lms"
    android:orientation="horizontal"
    android:paddingBottom="5sp"
    android:paddingRight="5sp"
    android:paddingLeft="5sp"
    android:paddingTop="5sp"
    android:background="@drawable/wall">

    <LinearLayout
        android:layout_width="144dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <com.example.shivam.acm.SquareImageView
            android:id="@+id/project_lms_imgVIew1"
            android:layout_width="match_parent"
            android:layout_height="143dp"
            app:srcCompat="@drawable/nikhil" />

        <TextView
            android:id="@+id/project_lms_txtView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.00"
            android:fontFamily="serif"
            android:text="Nikhil (Mentor)"
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:textSize="18sp"
            android:textStyle="bold" />

        <com.example.shivam.acm.SquareImageView
            android:id="@+id/project_lms_imgView2"
            android:layout_width="match_parent"
            android:layout_height="142dp"
            app:srcCompat="@drawable/durva"
            android:paddingTop="5sp"/>

        <TextView
            android:id="@+id/project_lms_txtView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.04"
            android:fontFamily="serif"
            android:text="Durva (Developer)"
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/project_lms_txtView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="serif"
            android:scrollbars="vertical"
            android:text="TextView"
            android:textAlignment="viewStart"
            android:textColor="@android:color/background_light"
            android:textSize="18sp"
            android:paddingLeft="7sp"/>
    </LinearLayout>

</LinearLayout>

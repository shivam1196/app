<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="8dp"
    card_view:cardUseCompatPadding="true"
    android:layout_marginBottom="8dp"
    android:elevation="4dp"
    >
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal" android:layout_width="wrap_content"
    android:layout_height="218dp"
    android:background="@drawable/wall">

    <ImageView
        android:id="@+id/project_imgView1"
        android:layout_width="127dp"
        android:layout_height="210dp"
        app:srcCompat="@drawable/acm_png_file" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <TextView
            android:id="@+id/project_txtView1"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:paddingLeft="5sp"/>

        <TextView
            android:id="@+id/project_txtView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.02"
            android:fontFamily="serif"
            android:paddingLeft="5sp"
            android:text="Hello"
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/project_txtView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.04"
            android:fontFamily="serif"
            android:paddingLeft="5sp"
            android:text="Mentor: Akshat Chaturvedi"
            android:textColor="@android:color/background_light"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/project_txtView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.04"
            android:fontFamily="serif"
            android:paddingLeft="5sp"
            android:text="Developer: "
            android:textColor="@android:color/background_light"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/project_txtView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.06"
            android:fontFamily="serif"
            android:paddingLeft="5sp"
            android:text="Language"
            android:textColor="@android:color/background_light"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:text="Tap for More"
            android:textAlignment="center"
            android:textColor="@android:color/background_light" />
    </LinearLayout>
</LinearLayout></android.support.v7.widget.CardView>